<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox onKeyTyped="#procUndo" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PCMapper">
   <children>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="280.0" minWidth="10.0" prefWidth="247.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0" prefWidth="170.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="581.0" minWidth="10.0" prefWidth="573.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="342.0" minWidth="10.0" prefWidth="283.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <FlowPane hgap="20.0" prefWidth="354.0" style="-fx-border-color: black;">
               <children>
                <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connect" text="Connect:">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin></Button>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Label alignment="BOTTOM_RIGHT" text="10.0.1." />
                        <Spinner fx:id="spinner" prefHeight="26.0" prefWidth="92.0" />
                     </children>
                  </HBox>
               </children>
            </FlowPane>
            <HBox spacing="10.0" style="-fx-border-color: black;" GridPane.columnIndex="3">
               <children>
                  <RadioButton contentDisplay="RIGHT" mnemonicParsing="false" onAction="#MapSelect" selected="true" text="Map Lines" toggleGroup="$MapDrive">
                     <toggleGroup>
                        <ToggleGroup fx:id="MapDrive" />
                     </toggleGroup>
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton contentDisplay="RIGHT" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#BoundarySelect" text="Boundary" toggleGroup="$MapDrive">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" onAction="#DriveSelect" text="Drive" toggleGroup="$MapDrive">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin></RadioButton>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </HBox>
            <Label id="connectedLabel" fx:id="connectedLabel" text="Connected" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <ButtonBar prefWidth="552.0" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets right="5.0" />
               </GridPane.margin>
               <buttons>
                  <Button id="mapButton" mnemonicParsing="false" onAction="#sendMap" text="Send Map" />
                  <Button id="planButton" mnemonicParsing="false" onAction="#sendPlan" text="Plan" />
                  <Button id="startButton" mnemonicParsing="false" onAction="#sendStart" text="Start" />
                  <Button id="stopButton" mnemonicParsing="false" onAction="#sendStop" text="Stop" />
                  <Button id="exitButton" mnemonicParsing="false" onAction="#sendExit" text="Exit" />
               </buttons>
            </ButtonBar>
         </children>
      </GridPane>
      <ScrollPane style="-fx-border-color: Red;">
         <content>
            <StackPane prefHeight="720.0" prefWidth="1280.0">
               <children>
                  <Canvas fx:id="gridCanvas" height="720.0" width="1280.0" />
                  <Canvas id="pathCanvas" height="720.0" width="1280.0" />
                  <Pane fx:id="robotPane" prefHeight="720.0" prefWidth="1280.0">
                     <children>
                        <ImageView id="robot" fx:id="robot" disable="true" fitHeight="52.0" fitWidth="51.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@robot.png" />
                           </image>
                        </ImageView>
                        <ImageView id="greyRobot" fx:id="greyRobot" fitHeight="52.0" fitWidth="51.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@robot.png" />
                           </image>
                        </ImageView>
                     </children></Pane>
                  <Canvas id="mapCanvas" fx:id="mapCanvas" height="720.0" width="1280.0" />
                  <Canvas id="mapLineCanvas" fx:id="mapLineCanvas" height="720.0" onKeyReleased="#procUndo" onMouseDragged="#canvasDragged" onMousePressed="#canvasPressed" onMouseReleased="#canvasReleased" width="1280.0" />
               </children>
            </StackPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
